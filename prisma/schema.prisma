
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
// Enums: Solo las empresas que vamos a scrapear primero
enum ServiceProvider {
  AYSAM
  ECOGAS_CUYANA
}

enum BillStatus {
  PENDING
  PAID
  OVERDUE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  services  ServiceAccount[]
  createdAt DateTime @default(now())
}

model ServiceAccount {
  id                String          @id @default(uuid())
  userId            String
  provider          ServiceProvider
  accountIdentifier String          // Nro de Cuenta o Padrón
  alias             String?         // Ej: "Casa Luján"
  
  bills             Bill[]
  user              User            @relation(fields: [userId], references: [id])

  @@unique([userId, provider, accountIdentifier])
}

model Bill {
  id               String     @id @default(uuid())
  serviceAccountId String
  
  amount           Decimal    @db.Decimal(10, 2)
  period           String     // Ej: "01/2026"
  dueDate          DateTime
  status           BillStatus @default(PENDING)
  
  // Hash único para evitar duplicados al scrapear
  // Lo generaremos sumando: Periodo + Monto + Vencimiento
  scrapedHash      String?

  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  serviceAccount   ServiceAccount @relation(fields: [serviceAccountId], references: [id])

  // Evita guardar dos veces la misma deuda
  @@unique([serviceAccountId, scrapedHash]) 
}
